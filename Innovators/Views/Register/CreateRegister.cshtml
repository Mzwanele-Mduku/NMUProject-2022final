@model Innovators.Models.Register

<form method="post" asp-action="CreateRegister">
    <input asp-for="RegId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Create Register</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Date"></label>@*These names come from our properties in the model *@
                    </div>
                    <div class="col-6">
                        <label asp-for="StudentName"></label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-6">
                        
                        @Html.TextBox("Date", DateTime.Now.ToShortDateString()) 
                    </div>
                    <div class="col-6">
                        <input  asp-for="StudentName" class="form-control" />
                    </div>

                </div>


                <div class="row">
                    <div class="col-12">
                        <div class="form-group row">
                            <div class="col-6">
                                <label asp-for="Attended"></label>@*These names come from our properties in the model *@
                            </div>
                            <div class="col-6">
                                <label asp-for="Absent"></label>
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col-6">
                                <input  asp-for="Attended" class="form-control" />
                            </div>
                            <div class="col-6">
                                <input  asp-for="Absent" class="form-control" />
                            </div>

                        </div>




                        <div class="row">
                            <div class="col-12">
                                <div class="form-group row">
                                    @*<div class="col-6">
                                        <label asp-for="StudentSurname" class="form-control custom-file-input"></label>@*These names come from our properties in the model *@
                                       @* <label class="custom-file-label">Choose File...</label>
                                    </div>*@
                                    <div class="form-group row">
                                        <div class="col-6">
                                            <label asp-for="StudentSurname"></label>@*These names come from our properties in the model *@
                                        </div>

                                        </div>
                                        


                                    <div class="col-6">
                                        <input asp-for="StudentSurname" class="form-control" />
                                    </div>


                                    <div class="form-group row">
                                        <div class="col-8 offset-2 row">
                                            <div class="col">
                                                <input type="submit" class="btn btn-info w-75" value="CreateRegister" />
                                            </div>
                                            <div class="col">
                                                <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>